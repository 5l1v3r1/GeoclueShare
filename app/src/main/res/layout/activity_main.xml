<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_background"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/location_mode"
            android:layout_width="@dimen/right_block_size"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:gravity="right"
            android:text="Unknown"
            android:textColor="@color/status_text_color"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/location_mode_main"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/standard_margin"
            android:layout_marginRight="@dimen/standard_margin"
            android:layout_toLeftOf="@id/location_mode"
            android:text="@string/location_mode_text"
            android:textColor="@color/main_text_color"
            android:textSize="@dimen/main_text_size" />

        <TextView
            android:id="@+id/location_mode_description"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/location_mode_main"
            android:layout_marginRight="@dimen/standard_margin"
            android:layout_toLeftOf="@id/location_mode"
            android:text="@string/location_mode_description"
            android:textColor="@color/description_color" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="@color/bottom_border_color" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/service_toggle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:checked="false"
            android:contentDescription="@string/service_toggle_description"
            android:hint="@string/service_toggle_description"
            android:text="@string/service_toggle_text"
            android:textSize="@dimen/main_text_size" />

        <TextView
            android:id="@+id/service_toggle_description"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/service_toggle"
            android:layout_marginRight="@dimen/right_block_size"
            android:text="@string/service_toggle_description"
            android:textColor="@color/description_color" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="@color/bottom_border_color" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/connected_devices"
            android:layout_width="@dimen/right_block_size"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:gravity="right"
            android:text="0"
            android:textColor="@color/status_text_color"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/connected_devices_main"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/standard_margin"
            android:layout_marginRight="@dimen/standard_margin"
            android:layout_toLeftOf="@id/connected_devices"
            android:text="@string/connected_devices_text"
            android:textColor="@color/main_text_color"
            android:textSize="@dimen/main_text_size" />

        <TextView
            android:id="@+id/connected_devices_description"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/connected_devices_main"
            android:layout_marginRight="@dimen/standard_margin"
            android:layout_toLeftOf="@id/connected_devices"
            android:text="@string/connected_devices_description"
            android:textColor="@color/description_color" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="@color/bottom_border_color" />
</LinearLayout>
